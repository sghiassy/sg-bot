{
  "name": "sg-bot",
  "version": "1.0.0",
  "description": "A HipChat bot by Shaheen Ghiassy",
  "main": "index.js",
  "repository": "git@github.com:sghiassy/sg-bot.git",
  "author": "Shaheen Ghiassy <shaheen.ghiassy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "deploy:prod": "serverless deploy --stage prod",
    "deploy:stag": "serverless deploy --stage staging",
    "deploy:prod:fast": "serverless deploy function --stage prod --function bot",
    "deploy:stag:fast": "serverless deploy function --stage staging --function bot",
    "dev": "export ENV='dev'; sls offline start --stage dev --prefix dev",
    "log:prod": "serverless logs --stage prod -f bot",
    "log:stag": "serverless logs --stage staging -f bot"
  },
  "dependencies": {
    "aws-sdk": "^2.20.0",
    "lodash": "^4.17.4",
    "serverless-dynamodb-local": "^0.2.18",
    "serverless-secrets": "^2.0.2",
    "serverless-secrets-plugin": "^0.0.1",
    "superagent": "^3.5.0"
  },
  "devDependencies": {
    "serverless-offline": "^3.9.0"
  }
}
